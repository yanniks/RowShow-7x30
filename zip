#!/bin/bash
DATE=$(date +%Y%m%d-%H%M)
PWD=$(pwd)
# cleanup
rm -v ~/AnyKernel/{kernel/zImage,system/lib/modules/*}
# copy files
find . -name "*.ko" -exec cp -v {} ~/AnyKernel/system/lib/modules/ \;
cp -v arch/arm/boot/zImage ~/AnyKernel/kernel/zImage
# zip it
cd ~/AnyKernel
zip -r9 ~/kernel-$DATE.zip *
# return
cd $PWD
